{%load gravatar%}
<div id="comments">
    {% for comment in comment_list %}
    <div id="c{{comment.id}}">
        <p class="text-left">
            <a href="#"><img src="{% gravatar_url comment.user_email %}"></a>
        </p>
        <p class="text-left" id="cname{{ comment.id }}">
            <a href="{{comment.url}}">{{comment.name}}</a>
        </p>
    </div>
    <div class="row">
        <div class="span6">
            {% if comment.rContent and comment.rName %}
            <blockquote>
                <p class="muted">
                	<font size="3px">
                    {{comment.rContent}}
					</font>
                </p>
                <small>
                    {{comment.rName}}
                </small>
            </blockquote>
            {% endif %}
            <p class="text-left" id="ccomment{{comment.id}}">
                {{comment.comment}}
            </p>
            <p class="muted">
                {{comment.submit_date|date:"Y年n月j日,G时i分"}}
            </p>
            <p>
                <a class="label label-info reply" href="#replycontent" name="{{comment.id}}">回复</a>
            </p>
        </div>
    </div>
    {% endfor %}
</div>
